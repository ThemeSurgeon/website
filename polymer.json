{
    "entrypoint": "index.html",
    "shell": "src/application-shell.js",
    "npm": true,
    "moduleResolution": "node",
    "license": "MIT",
    "fragments": [
      "src/one-two.js",
      "src/metadata.js",
      "src/send-feedback.js",
      "src/wrong-page.js"
    ],
  
    "sources": [
      "src/**"
    ],
  
    "extraDependencies": [
      "node_modules/@webcomponents/webcomponentsjs/*.js",
      "manifest.json",
      "package.json",
      "sitemap.xml",
      "robots.txt"
    ],

    "lint": {
      "rules": [
        "polymer-3"
      ]
    },
  
    "builds": [
      {
        "name": "esm-bundled",
        "browserCapabilities": [
          "es2015",
          "modules"
        ],
        "js": {
          "minify": true
        },
        "css": {
          "minify": true
        },
        "html": {
          "minify": true
        },
        "bundle": {
          "inlineScripts": false
        },
        "addServiceWorker": true
      },
      {
        "name": "es6-bundled",
        "browserCapabilities": [
          "es2015"
        ],
        "js": {
          "minify": true,
          "transformModulesToAmd": true
        },
        "css": {
          "minify": true
        },
        "html": {
          "minify": true
        },
        "bundle": {
          "inlineScripts": false
        },
        "addServiceWorker": true
      },
      {
        "name": "es5-bundled",
        "js": {
          "minify": true,
          "compile": true,
          "transformModulesToAmd": true
        },
        "css": {
          "minify": true
        },
        "html": {
          "minify": true
        },
        "bundle": {
          "inlineScripts": false
        },
        "addServiceWorker": true
      }
    ]
    
  }
  